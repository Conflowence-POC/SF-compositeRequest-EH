						<ee:transform doc:name="Transform Message" doc:id="2bbd7f7e-bce7-4963-8e16-ed4b7295813a" >
							<ee:message >
								<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
(((payload.compositeResponse[1].body) map (item, index) -> ({
    "index": index,
    "success": item.success,
    "errorMessage" : item.errors.message[0]
    
})) filter $.success != true) map ((item1, index1) -> 
{
    "index": item1.index,
    "errorMessage" : item1.errorMessage,
    "Customer ID" : vars.records[item1.index]."Customer ID"
}
)]]></ee:set-payload>
							</ee:message>
						</ee:transform>
					</on-error-continue>
				</error-handler>
			</try>
			<ee:transform doc:name="store responses" doc:id="b64a4633-1d51-4718-a526-8f52baa1293c">
				<ee:message>
				</ee:message>
				<ee:variables>
					<ee:set-variable variableName="failedRecords" ><![CDATA[%dw 2.0
output application/json
---
vars.failedRecords + ((((payload.compositeResponse[1].body) map (item, index) -> ({
    "index": index,
    "success": item.success,
    "errorMessage" : item.errors.message[0]
    
})) filter $.success != true) map ((item1, index1) -> 
{
    "index": item1.index,
    "errorMessage" : item1.errorMessage,
    "Customer ID" : vars.records[item1.index]."CustomerId__c"
}
))]]></ee:set-variable>
				
</ee:variables>
