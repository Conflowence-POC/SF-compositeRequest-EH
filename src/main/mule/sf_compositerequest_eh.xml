		<foreach doc:name="For Each" doc:id="fc28d72f-b030-441f-a502-e9e882393925" collection="#[payload]" batchSize="6">
			<ee:transform doc:name="set var" doc:id="a9dd785e-916f-4e1d-a480-da12209d7791" >
				<ee:message >
				</ee:message>
				<ee:variables >
					<ee:set-variable variableName="records" ><![CDATA[%dw 2.0
output application/json
---
payload map  {
                    "attributes": {
                        "type": "Account"
                    },
                    "Name": $.Name,
                    "CustomerId__c": $."Customer ID",
                    "Phone" : $.Phone,
                    "Email__c" : $."Email",
                    "RecordTypeId" : "@{recordType.records[0].Id}"
                }]]></ee:set-variable>
				</ee:variables>
			</ee:transform>
			<ee:transform doc:name="build request" doc:id="f1d76a40-9cb3-4ee6-b7b2-7974f3e58ba3" >
				<ee:message >
				</ee:message>
				<ee:variables >
					<ee:set-variable variableName="compositerequest" ><![CDATA[%dw 2.0
output application/json
---
{
	"allOrNone" : false,
    "compositeRequest": [
        {
            "url": "/services/data/v58.0/query?q=SELECT+Id+FROM+RecordType+WHERE+SobjectType='Account'+AND+DeveloperName='Business_Customer'",
            "method": "GET",
            "referenceId": "recordType"
        } ,
        {

             
            "method": "PATCH",
            "url": "/services/data/v58.0/composite/sobjects/Account/CustomerId__c",
            "referenceId": "upsertresult"  ,   
            "body": {
                "records": vars.records
                
            }
        
           }

    ] 
}
]]></ee:set-variable>
				</ee:variables>
			</ee:transform>
			<try doc:name="Try" doc:id="856a9963-54c2-459b-954c-33b8159ed489" >
